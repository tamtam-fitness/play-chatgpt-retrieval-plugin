services:
  retrieval-app:
    build:
      context: ../../../
      dockerfile: Dockerfile.dev
    container_name: retrieval-app
    volumes:
      - ../../../:/app
    tty: true
    stdin_open: true
    ports:
      - "8080:8800"
    depends_on:
      - qdrant
    environment:
      DATASTORE: "qdrant"
      QDRANT_URL: "http://qdrant"
      BEARER_TOKEN: "${BEARER_TOKEN}"
      OPENAI_API_KEY: "${OPENAI_API_KEY}"
  qdrant:
    image: qdrant/qdrant:v1.0.3

version: '3'